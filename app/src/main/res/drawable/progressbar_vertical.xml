<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="@color/grey"
                android:centerColor="@color/silver"
                android:centerY="0.75"
                android:endColor="@color/grey_light"
                android:angle="180"
                />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/purple_light"
                    android:centerColor="@color/purple"
                    android:centerY="0.75"
                    android:endColor="@color/purple_dark"
                    android:angle="180"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/blue_light"
                    android:centerColor="@color/blue"
                    android:centerY="0.75"
                    android:endColor="@color/blue_dark"
                    android:angle="180"
                    />
            </shape>
        </clip>
    </item>
</layer-list>